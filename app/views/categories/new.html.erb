<div class="container mt-4">
  <h1>Add New Category</h1>

  <%= form_with(model: @category, local: true) do |form| %>

  <p>
    <%= form.label :name %><br />
    <%= form.text_field :name , :class=>"form-control" %>
  </p>

  <p><%= form.submit 'Create Category' , :class=>"btn btn-primary" %></p>

  <% end %>
</div>
